@{
    ViewData["Title"] = "FirstLogin";
    Layout = null;
}
@model FirstChangePasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="~/css/FirstLogin.css" asp-append-version="true">


</head>
<body>
    <div class="container">
        <ul class="step-title mt-2">
            <li class="step-items active">Change password</li>
            <li class="step-items">Change avatar</li>
            <li class="step-items">Confirm information</li>
        </ul>
    </div>

    <div class="progress mt-2" style="width: 0%"></div>

    <div class="container">
        <h2 class="mt-4">General information</h2>
        <p>
            First, we need to know a little bit more about your information.
        </p>
    </div>


    <div class="container">
        <form data-multi-step class="multi-step-form mt-2" id="form-info" action="~/FirstLogin" method="post">
            <div class="card" data-step>
                <h3 class="title m-0 p-0">1. Change password</h3>
                <p>
                    This is the first time you logged in.
                    You have to change your password to continue.
                </p>
                <div class="form-group mt-1">
                    <label asp-for="NewPassword" for="password">Password</label>
                    <input type="password" asp-for="NewPassword" id="password">
                </div>
                <div class="form-group">
                    <label for="confirm-password">Confirm Password</label>
                    <input type="password" name="confirm-password" id="confirm-password">
                </div>
                <button type="button" class="btn btn-next" data-next>
                    <span class="circle" aria-hidden="true" data-next>
                        <span class="icon arrow" data-next></span>
                    </span>
                    <span class="button-text" data-next>Next</span>
                </button>
            </div>
            <div class="card" data-step>
                <h3 class="title">2. Change avatar</h3>
                <div class="position-relative">
                    <img id="avatar-img" src="/images/avatars/@ViewBag.Avatar" class="rounded-circle img-fluid d-block mx-auto" width="35%">
                    <input type="file" class="form-control w- mx-auto d-none" id="objFile" name="objFile" onchange="HandlePreviewAvatar(event)">
                    <label for="objFile" class="btn-changeAva"><i class="uil uil-camera"></i></label>
                </div>
                @*<button type="button" data-previous>Previous</button>*@
                <button type="button" class="btn btn-next" data-next>
                    <span class="circle" aria-hidden="true" data-next>
                        <span class="icon arrow" data-next></span>
                    </span>
                    <span class="button-text" data-next>Next</span>
                </button>
            </div>
            <div class="card" data-step>
                <h3 class="title">Confirm information</h3>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <input type="email" asp-for="Email" id="email" value="@ViewBag.Email" disabled>
                </div>              
                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input type="text" asp-for="FirstName" id="firstName" value="@ViewBag.FirstName">
                </div>
                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input type="text" asp-for="LastName" id="lastName" value="@ViewBag.LastName">
                </div>
                @*<button type="button" data-previous>Previous</button>*@
                <div class="text-right">
                    <button type="submit" class="btn-submit btn-custom-loading">
                        <div class="loader"></div>
                        <span>Get in touch</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/FirstLogin.js" asp-append-version="true"></script>
</body>
</html>
