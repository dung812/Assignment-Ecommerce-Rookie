
@{
    ViewData["Title"] = "Checkout";
}
<div class="container mt-4">
    <nav aria-label="breadcrumb" class="pb-0 py-3 border-bottom">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Cart" asp-action="CartPage">Shopping cart</a></li>
            <li class="breadcrumb-item active" aria-current="page">Checkout</li>
        </ol>
    </nav>

    <div class="section">
        <div class="row justify-content-center mb-md-5">
            <div class="col-12 col-md-6 mb-5">
                <div class="process-wrap">
                    <div class="process text-center active">
                        <p><span>01</span></p>
                        <h3>Shopping Cart</h3>
                    </div>
                    <div class="process text-center active">
                        <p><span>02</span></p>
                        <h3>Checkout</h3>
                    </div>
                    <div class="process text-center">
                        <p><span>03</span></p>
                        <h3>Order Complete</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12 col-md-8">
                <div class="wrap-checkout">
                    <form method="post" action="#">
                        <!-- <input type="hidden" name="customerId" value="1">
                        <input type="hidden" name="paymentId" value="1"> -->
                        <h3 class="mb-4">Billing Details</h3>
                        <div>
                            <h5>Contact information</h5>
                            <div class="customer-info">
                                <div>
                                    <img src="~/images/avatars/avatar.jpg" class="img-fluid rounded-circle" alt="avatar customer">
                                </div>
                                <p>
                                    Nguyen Thanh Dung
                                    <span class="contact-gmail">knguyn16@gmail.com</span>
                                </p>
                            </div>
                        </div>
                        <div class="checkout-address mt-4">
                            <h5>Shipping address</h5>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="country">Select Your Address</label>
                                        <div class="form-field">
                                            <i class="uil uil-arrow-down icon"></i>
                                            <select name="address-list" id="address" class="form-control">
                                                <option value="Nguyễn Thanh Dũng, +844706437167, QN" selected="">Nguyen Thanh Dung, +844706437167, Quy Nhơn City <span>(Default address)</span></option>
                                                <option value="Nguyễn Thanh Dũng, +844706437167, QN">Nguyen Thanh Dung, +844706437167, Thạnh Lộc q12</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="first-name">First Name</label>
                                        <input type="text" id="first-name" name="first-name" class="form-control" placeholder="" required="">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="last-name">Last Name</label>
                                        <input type="text" id="last-name" name="last-name" class="form-control" placeholder="" required="">
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="phone">Phone number</label>
                                        <input type="tel" id="phone" name="phone" class="form-control" placeholder="">
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="address">Address</label>
                                        <input type="text" id="address" name="address" class="form-control" placeholder="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>

            </div>

            <div class="col-12 col-md-4 mt-4 mt-md-0">
                <div class="row">
                    <div class="col-12">
                        <div class="cart-detail wrap-checkout">
                            <h5 class="mb-4">Cart Total</h5>
                            <div>
                                <div class="row my-3">
                                    <div class="col-8">Men's Boston Soft Footbed Clog - Size: 39 (Qty: 1)</div>
                                    <div class="col-4 text-end">$224</div>
                                </div>
                                <div class="row my-3">
                                    <div class="col-8">Men's Boston Soft Footbed Clog - Size: 39 (Qty: 1)</div>
                                    <div class="col-4 text-end">$224</div>
                                </div>

                                <hr>

                                <div class="row mt-2">
                                    <div class="col-8">Subtotal</div>
                                    <div class="col-4 text-end">$224</div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-8">Shipping</div>
                                    <div class="col-4 text-end">free</div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-8">Order Total</div>
                                    <div class="col-4 fw-bold fs-6 text-end">$224</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="wrap-checkout">
                            <h5 class="mb-4">Cart Total</h5>
                            <div class="form-group my-4">
                                <div class="col-md-12">
                                    <div class="radio">
                                        <label><input type="radio" name="optpayment" value="1" onclick="ChangeActionPayment(this);" checked=""> Cash on delivery</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group my-4">
                                <div class="col-md-12">
                                    <div class="radio">
                                        <label><input type="radio" name="optpayment" value="2" onclick="ChangeActionPayment(this);"> Paypal</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12">
                                    <div class="checkbox">
                                        <label><input type="checkbox" value="" onchange="document.getElementById('btn-submit').classList.toggle('disabled'); document.querySelector('.btn-submit-paypal').classList.toggle('disabled')"> I have read and accept the terms and conditions</label>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-md-12 text-center">
                        <div class="btn btn-primary disabled" id="btn-submit"><a asp-controller="Cart" asp-action="OrderSuccess" style="color:#fff">Place an order</a></div>
                        <!-- <div class="btn btn-primary disabled" id="btn-submit">Place an order</div> -->
                        <a asp-controller="Cart" asp-action="OrderSuccess" class="btn btn-submit-paypal btn-custom-loading disabled d-none">
                            <div class="loader"></div><img src="~/images/material/paypalicon.svg" class="img-fluid"><img src="~/images/material/paypalcontent.svg" class="img-fluid w-50 paypal-icon">
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
