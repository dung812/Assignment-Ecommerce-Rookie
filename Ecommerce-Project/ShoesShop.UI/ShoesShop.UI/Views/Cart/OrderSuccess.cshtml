
@{
    ViewData["Title"] = "Successfully order";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="pb-0 py-3 border-bottom">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Cart" asp-action="CartPage">Shopping cart</a></li>
        </ol>
    </nav>

    <div class="section">
        <div class="row justify-content-center mb-md-5">
            <div class="col-12 col-md-6 mb-5">
                <div class="process-wrap">
                    <div class="process text-center active">
                        <p><span>01</span></p>
                        <h3>Shopping Cart</h3>
                    </div>
                    <div class="process text-center active">
                        <p><span>02</span></p>
                        <h3>Checkout</h3>
                    </div>
                    <div class="process text-center active">
                        <p><span>03</span></p>
                        <h3>Order Complete</h3>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5 mt-md-0 justify-content-center">
            <div class="col-8 text-center">
                <p class="icon-addcart"><span><i class="uil uil-check"></i></span></p>
                <h2 class="mb-4">Thank you for purchasing, Your order is complete</h2>
                <div>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline">Home</a>
                    <a asp-controller="Product" asp-action="ProductList" asp-route-cateGender="Women" class="btn btn-outline"><i class="uil uil-shopping-cart"></i> Continue Shopping</a>
                </div>
            </div>
        </div>
    </div>
</div>

